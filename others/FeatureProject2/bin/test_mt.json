{
    "datadir" : "../data",
    "hasid" : true,
    "autoremove" : true, // 执行完任务后删除输入文件
    "tasks" : [
        {
            "name" : "raw2fv",
            "lib"  : "raw2fv_mt.so",
            "input" : "adult.txt",
            "desc" : "adult_desc.json"
        },
        {
            "name" : "merge_dense",
            "dense" : "vectors.txt",
            "feature" : "search_text",
            "output" : "adult_mt.fv"
        },
        {
            "name" : "build_index",
            "info" : "adult.fi"
        },
        {
            "name" : "normalize",
            "info" : "adult.fi",
            "output" : "adult.normalized.fv",
            "autoremove" : false
        },
        {
            "name" : "format_output",
            "info" : "adult.fi",
            "input" : "adult.normalized.fv",
            "output" : "adult_mt.formatted.txt",
            "autoremove" : false
        },
        {
            "name" : "format_output_concur",
            "info" : "adult.fi",
            "concur" : "adult.concur",
            "input" : "adult.normalized.fv",
            "output" : "adult.formatted.concur.txt",
            "mark" : "_1",
            "autoremove" : false
        },
        {
            "name" : "iv_woe",
            "input" : "adult.normalized.fv",
            "output" : "adult_mt.iv_woe",
            "target" : "target.txt"
        }
    ]
}

